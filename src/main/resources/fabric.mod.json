{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${mod_version}",
  "name": "${mod_name}",
  "description": "${mod_description}",
  "authors": [ "${mod_author_list}" ],
  "contact": {
    "homepage": "${mod_homepage}",
    "sources": "${mod_sources}",
    "issues": "${mod_issues}"
  },
  "license": "${mod_license}",
  "icon": "icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "dev.chililisoup.creativecraftingmenus.CreativeCraftingMenus"
    ]
  },
  "accessWidener" : "${mod_id}.classtweaker",
  "depends": {
    "fabricloader": ">=0.18",
    "minecraft": "${minecraft_range}"
  },
  "recommends": {
    "fabric-api": "*",
    "yet_another_config_lib_v3": "*"
  }
}
